<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:padding="8dp">

    <!-- Header: Nickname and IP -->


    <!-- Message Bubble -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_message_bubble2"
        android:padding="12dp"
        android:orientation="vertical"
        android:elevation="2dp">
        <TextView
            android:id="@+id/sentHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:text="~You 192.168.1.2" />
        <!-- Message Text -->
        <TextView
            android:id="@+id/sentMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxWidth="250dp" />

        <!-- Timestamp -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end">

            <TextView
                android:id="@+id/sentTimestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:text="15:03"
                android:layout_marginEnd="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
