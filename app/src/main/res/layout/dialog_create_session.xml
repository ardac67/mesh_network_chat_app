<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modalCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white"
    android:background="@drawable/modal_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:orientation="vertical">

        <!-- Modal Title with Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/modalIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Modal Icon"
                android:src="@drawable/message_icon"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/modalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="12dp"
                android:text="Create a Session"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Description or Subtitle -->
        <TextView
            android:id="@+id/modalSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="24dp"
            android:text="Start a new session to connect with your friends."
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <!-- Create Session Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/createSessionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/podcasts_connect"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingVertical="14dp"
            android:text="Create Session"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary"
            app:cornerRadius="24dp"
            app:icon="@drawable/face"
            app:iconPadding="8dp"
            app:iconTint="@color/white" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
