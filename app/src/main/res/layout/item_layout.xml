<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/recycler_border"
    tools:ignore="HardcodedText">

    <!-- Avatar with Online Status -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/material_clock_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/face"
            tools:ignore="ContentDescription" />

        <!-- Online Indicator -->
        <View
            android:id="@+id/onlineIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_background_green"
            android:layout_gravity="bottom|end"
            android:layout_margin="6dp" />
    </FrameLayout>

    <!-- Title and Subtitle -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/timeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/chatTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Legend”..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/chatSubtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Of course, we just added that to..."
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:40 PM"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/unreadBadgeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="8dp"
        tools:ignore="RtlSymmetry" />

    <!-- Unread Badge -->
    <TextView
        android:id="@+id/unreadBadgeTextView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="2"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_background_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
