<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/recycler_border"
    tools:ignore="HardcodedText">

    <!-- Avatar with Online Status -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/material_clock_face"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/face"
            tools:ignore="ContentDescription" />

        <!-- Online Indicator -->
        <View
            android:id="@+id/onlineIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_background_green"
            android:layout_gravity="bottom|end"
            android:layout_margin="6dp" />
    </FrameLayout>

    <!-- Title and Subtitle -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/timeTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/chatTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“Legend”..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/chatSubtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Of course, we just added that to..."
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Timestamp and Badge Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end"
        android:paddingEnd="8dp">

        <!-- Horizontal LinearLayout for the two TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time TextView -->
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="3:40 PM"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Unread Badge TextView -->
            <TextView
                android:id="@+id/unreadBadgeTextView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_background_blue"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Button Below -->

        <ImageView
            android:id="@+id/connectSocketImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Door Icon"
            android:clickable="true"
            app:srcCompat="@drawable/podcasts_connect"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
